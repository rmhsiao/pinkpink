        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_above="@+id/gplusLogin"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginBottom="68dp" />-->

    <com.google.android.gms.common.SignInButton
        android:id="@+id/gplusLoginO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_below="@+id/fbLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp" />

    <Button
        android:text="gplusLogout"
        android:id="@+id/gplusLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

    <ImageView
        android:src="@android:drawable/ic_menu_gallery"
        android:padding="5dp"
        android:background="#dd4b39"
        android:id="@+id/profilePic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mDialog"
        android:text="@string/login"
        android:textSize="30sp"
        android:layout_above="@+id/fbLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fbLogin"
        android:src="@drawable/fb"
        android:contentDescription="FB log in"
        android:background="#00000000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fbLogout"
        android:src="@drawable/okk"
        android:layout_above="@+id/mDialog"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gplusLogin"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/fbLogout"
        android:layout_alignStart="@+id/fbLogout"
        android:layout_toLeftOf="@+id/gplusLogout"
        android:layout_toStartOf="@+id/gplusLogout"
        android:src="@drawable/common_plus_signin_btn_icon_dark_normal" />

