    <FrameLayout
        android:id="@+id/day_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day1"
            android:id="@+id/day1_dayList"
            android:layout_gravity="center_vertical"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016.08.15"
            android:id="@+id/day1_date"
            android:layout_gravity="center_vertical|end"
            android:textSize="15dp"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/step0"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:id="@+id/step0_left"
            android:orientation="vertical"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/mappin_0"
                android:src="@drawable/mappin_0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12dp"
                android:text="AM  0:00"
                android:id="@+id/end0_clock" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/step0_right"
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="step_name"
                android:id="@+id/step0_name"
                android:textSize="25dp"
                android:layout_gravity="center_vertical|left"
                android:layout_above="@+id/step_location"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="step_location"
                android:id="@+id/step0_location"
                android:layout_gravity="center_vertical|left"
                android:layout_below="@+id/stay_time"
                android:layout_alignLeft="@+id/step_name"
                android:layout_alignStart="@+id/step_name" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/step1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:id="@+id/step1_left"
            android:orientation="vertical"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/start_clock"
                android:layout_gravity="center"
                android:textSize="12dp"
                android:text="AM  0:00"/>

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/mapPin_0"
                android:src="@drawable/mappin_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12dp"
                android:text="AM  0:00"
                android:id="@+id/end_clock" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/step1_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="10dp">
             <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="step_name"
                    android:id="@+id/step_name"
                    android:textSize="25dp"
                    android:layout_gravity="center_vertical|start"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="step_location"
                android:id="@+id/step_location"
                android:layout_gravity="center_vertical|left"
                android:layout_below="@+id/step_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stay_time_icon"
                android:src="@drawable/timer"
                android:layout_alignBottom="@+id/stay_time"
                android:layout_toLeftOf="@+id/stay_time" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:id="@+id/stay_time"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
